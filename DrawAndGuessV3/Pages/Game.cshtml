@page
@model DrawAndGuessV3.Pages.GameModel
@{
    if (HttpContext.Session.GetString("name") == null)
    {
        Response.Redirect("/");
    }

    ViewData["Title"] = "Game";
}

<div>
    <div class="paintbox">
        <div>
            <input type="color" id="color" class="colorbtn" value="#000000" />
            <input type="button" id="clear" class="btn-primary clearbtn" value="Clear" />
        </div>
        <div>
            <canvas id="draw-canvas" height="600" width="800"></canvas>
        </div>
    </div>

    <div id='bodybox'>
        <div id='chatborder'>
          <p id="chatlog12" class="chatlog">&nbsp;</p>
          <p id="chatlog11" class="chatlog">&nbsp;</p>
          <p id="chatlog10" class="chatlog">&nbsp;</p>
          <p id="chatlog9" class="chatlog">&nbsp;</p>
          <p id="chatlog8" class="chatlog">&nbsp;</p>
          <p id="chatlog7" class="chatlog">&nbsp;</p>
          <p id="chatlog6" class="chatlog">&nbsp;</p>
          <p id="chatlog5" class="chatlog">&nbsp;</p>
          <p id="chatlog4" class="chatlog">&nbsp;</p>
          <p id="chatlog3" class="chatlog">&nbsp;</p>
          <p id="chatlog2" class="chatlog">&nbsp;</p>
          <p id="chatlog1" class="chatlog">&nbsp;</p>
          
          <input type="text" name="chat" id="chatbox" placeholder="Type your guess here..."
            onfocus="placeHolder()">  
        </div>
    </div>
</div>
            <h1>
                Chat
            </h1>
            <p id="status">Waiting for users...</p>
            <div class="container">
                <div class="row">&nbsp;</div>
                <ol id="players">
                </ol>
                <div class="row">
                    <div class="col-2">User</div>
                    <div class="col-4">
                        <p id="name">@HttpContext.Session.GetString("name")</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-2">Message</div>
                    <div class="col-4"><input type="text" id="messageInput" /></div>
                </div>
                <div class="row">&nbsp;</div>
                <div class="row">
                    <div class="col-6">
                        <input type="button" id="sendButton" value="Send Message" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <hr />
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <ul id="messagesList"></ul>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <ul id="userList"></ul>
                </div>
            </div>
            <input id="hdId" type="hidden" />
        </div>
    </div>
</div>
</section>

<script src="https://unpkg.com/@@aspnet/signalr@@1.0.0/dist/browser/signalr.js"></script>
<script src="js/draw.js"></script>
<script src="js/chat.js"></script>
<script src="js/user.js"></script>
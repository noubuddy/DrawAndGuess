<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Meta -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css" />
    <link rel="icon" href="~/images/icons/favicon.png" />
    <link rel="apple-touch-icon" href="~/images/icons/apple-touch-icon.png" />

    <!-- CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DrawAndGuessV3.styles.css" asp-append-version="true" />

    <!-- Animations CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet" />

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet" />

    <!-- Title -->
    <title>Draw & Guess</title>
</head>
<body onload="changeBg()">
    <section>
        <header>
            <nav class="navbar containerc">
                <a asp-area="" asp-page="/Index"><img src='images/icons/logo.png' class="logo logoplus" ></a>
                <input type="checkbox" id="toggler">
                <label for="toggler"><i class="ri-menu-line"></i></label>
            </nav>
        </header>
    </section>

    <div class="containerc">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <section id="basic-footer" class="sectionfooter">
            <div class="footer-basic">
                <footer>
                    <div class="social">
                        <a href="https://www.instagram.com/a2b_projects/"><i class="icon ion-social-instagram"></i></a>
                        <a href="https://www.funcage.com/"><i class="icon ion-social-snapchat"></i></a>
                        <a href="https://www.facebook.com/groups/442518676508064"><i class="icon ion-social-facebook"></i></a>
                    </div>
                    <p class="copyright">The owner of this site is not responsible for any user generated content (drawings, messages, usernames)</p>
                    <p class="copyright">! Current version is not compatible with mobile devices !</p>
                    <a href="terms.html">
                        <p class="copyright">Terms of Service</p>
                    </a>
                    <p class="copyright">WhileTrue © 2022</p>
                </footer>
            </div>
        </section>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>